<!-- create a sample form group -->

<center>
<div class="container">
<span class="border border-primary ">
  <form action="/index/new" method="POST" class="was-validated">
	<div class="form-group">
	  <p class="font-weight-bold">Destination Name</p>
	  <input class="form-control form-textbox" type="text" placeholder="Name of Place" name="dstname" required>
	  <div class="invalid-feedback">Enter city/place/country you want to visit.</div>
	</div>

  <div class="spinner-wrapper">
    <div class="spinner"></div>
  </div>

	<div class="form-group">
	  <p class="font-weight-bold">Image URL</p>
	  <input class="form-control form-textbox" type="text" placeholder="Enter Image URL" name="imgurl" required>
	  <div class="invalid-feedback">Enter the URL of image.</div>
	</div>

	<button type="submit" class="btn btn-primary">
		Add
	</button>

</form>
</span>
</div>
</center>


