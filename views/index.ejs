<%- include("partials/header.ejs") %>


<!-- my jumbotron -->
<div class="jumbotron">
  <div class="container">
    <h1 class="display-4"><i class="fa fa-globe" aria-hidden="true"></i> Dream Destinations</h1>
    <p class="lead">cherish the destination you want to vist and add to your dream list</p>
  </div>
</div>

<div class="d-flex justify-content-center pb-4">
	<span class="mx-2">
	<form action="/index/new" method="GET">
	<button type="submit" class="btn btn-lg btn-primary pt-2">
		ADD NEW DESTINATION
	</button>
	</form>
	</span>
	
	<span class="mx-2">
	<form action="/index/explore" method="GET">
	<button type="submit" class="btn btn-lg btn-primary pt-2">
		EXPLORE PLACES
	</button>
	</form>
	</span>
</div>

<!-- Heading -->
	 <div class="container-fluid">
		 <div class="row" style="display:flex;flex-wrap:wrap;">
			   <% for(var i=0;i<itemlist.length;i++){ %>
			<div class="col col-lg-4">
			  <div class="card mx-2 my-1" style="width:400px">
                  <img class="card-img-top" src="<%=itemlist[i].url%>" alt="Card image">
                  <div class="card-body">
					  <% var x= itemlist[i].name;
				          x=x.toUpperCase() %>
                    <h4 class="card-title"> <%=x%></h4>
                    <p class="card-text">Some example text.</p>
                    <a href="/places_info/<%=itemlist[i]._id %>" class="btn btn-primary">INFO</a>
                  </div>
              </div>
			 </div>
				<%}%>
		 </div>

     </div>


